{
  "manifest_version": 3,
  "name": "RMS Work Assistant",
  "version": "1.0.0",
  "description": "AI assistant for RMS Trucks - chat interface with browser control",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/browser-tools.js", "content/page-watcher.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open RMS Assistant"
  }
}
